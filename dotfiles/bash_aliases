# ~/.bash_aliases
alias ls="ls -1G"
alias gam="$HOME/bin/gam/gam"
alias tb="nc termbin.com 9999"
alias weather="curl http://wttr.in/texarkana"
alias timestamp="date +'%F %r' | tr -d '\n' | pbcopy"
alias myip="curl http://icanhazip.com"
alias stfu="osascript -e 'set volume output muted true'"
alias pumpitup="osascript -e 'set volume output volume 100'"
alias afk="/System/Library/CoreServices/Menu\ Extras/User.menu/Contents/Resources/CGSession -suspend"
alias cleanup="find . -type f -name '*.DS_Store' -ls -delete"
alias grep="grep --color=auto"
alias fgrep="fgrep --color=auto"
alias egrep="egrep --color=auto"
# mergepdf Usage: join [--output/-o <file>] [--shuffle] [--verbose] file1 file2 etc...
alias mergepdf="/System/Library/Automator/Combine\ PDF\ Pages.action/Contents/Resources/join.py"
alias speedtest="wget -O /dev/null http://speedtest.wdc01.softlayer.com/downloads/test10.zip"
alias json="cat $1 | python -m json.tool"
alias usage="du -h -d1"
alias reload="source $HOME/.bash_profile"
alias randpass="openssl rand -base64 8"
alias sleep="pmset sleep now"
#alias spotoff="sudo mdutil -a -i off"
#alias spoton="sudo mdutil -a -i on"
alias flush="dscacheutil -flushcache && killall -HUP mDNSResponder"